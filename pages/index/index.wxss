/**index.wxss**/
.container-flex {
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 13rpx 8px;
  box-sizing: border-box;
} 
/* Header */
.header {
  text-align: center;
  background-size: cover;
  height: 300px;
  display:flex;
  align-items: center;
  background-image: linear-gradient(-225deg, rgba(30,30,30,0.6) 30%, rgba(46,46,46,0.4) 80%), url('https://jaykef.com/img/IMG_5096.JPG');
  background-position: center;
}

/* Body style */
.wagon-wrap {
  padding: 10px 20px;
  margin: 0px 10px;
  text-align: center;
  line-height: 16px;
}
.desc {
  margin-top: 35rpx;
  color: #888888;
  font-size: 30rpx;
  padding-top:15px;
}

/* Btn */
.btn-index {
  background-color: #D03232;
  color: white;
  padding: 30rpx;
  border-radius: 3px;
  font-size: 35rpx;
  width: 520rpx;
  text-align: center;
  font-weight:bolder;
}
.cta-label {
  margin-top: 20rpx;
  color: #888888;
  font-size: 22rpx;
  text-align: center;
  padding:10px 30px;
}
.cta-margin {
  margin-top: 18px;
}





